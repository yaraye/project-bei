<div class="container">
    <div class="page-header">
        <h2>Fun Recipes</h2>
    </div>
    <div class="row">

        <form class="form-horizontal">
            <div class="form-group">
                <label for="recipeName" class="col-sm-2 control-label">Name</label>
                <div class="col-sm-10">
                    <input class="form-control" id="food-name" placeholder="recipeName" type="text">
                </div>
            </div>

            <div class="form-group">
                <label for="dish" class="col-sm-2 control-label">Dish</label>
                <div class="col-sm-10">
                    <input class="form-control" id="food-dish" placeholder="dish" type="text">
                </div>
            </div>


            <div class="form-group">
                <label for="ingredients" class="col-sm-2 control-label">Ingredients</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="food-ingredients" placeholder="ingredients" type="text"
                              rows="4"></textarea>
                </div>
            </div>

            <div class="form-group">
                <label for="instruction" class="col-sm-2 control-label">instruction</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="food-instruction" placeholder="instruction" type="text"
                              rows="4"></textarea>
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default" id="addRecipeButton">Add Recipe</button>
                </div>
            </div>
        </form>

        <hr/>

        <div id="food-list">
            <ul>
                {{#each foods}}
                    <li class="list-group-item" data-id="1"><a href="/food/1">{{name}}</a>

                        <button class="btn btn-danger float-right delete" style="margin-left:25px;">ï½˜</button>
                    </li>
                {{/each}}
            </ul>


        </div>

    </div>
</div>